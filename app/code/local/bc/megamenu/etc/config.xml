<?xml version="1.0"?>
<config>
    <modules>
        <Bc_MegaMenu>
            <version>0.1.0</version>
        </Bc_MegaMenu>
    </modules>
    <frontend>
        <routers>
            <megamenu>
                <use>standard</use>
                <args>
                    <module>Bc_MegaMenu</module>
                    <frontName>megamenu</frontName>
                </args>
            </megamenu>
        </routers>
        <layout>
            <updates>
                <megamenu>
                    <file>megamenu.xml</file>
                </megamenu>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <megamenu translate="title" module="megamenu">
                                            <title>Mega Menu</title>
                                            <sort_order>2000</sort_order>
                                        </megamenu>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <blocks>
            <megamenu>
                <class>Bc_MegaMenu_Block</class>
            </megamenu>
        </blocks>
        <helpers>
            <megamenu>
                <class>Bc_MegaMenu_Helper</class>
            </megamenu>
        </helpers>
    </global>
    <default>
        <megamenu>
            <general>
                <enabled>0</enabled>
                <display_empty_categories>1</display_empty_categories>
                <max_level>3</max_level>
                <show_home_link>0</show_home_link>
                <non_breaking_space>0</non_breaking_space>
            </general>
            <columns>
                <count>3</count>
                <litmit_row>5</litmit_row>
                <divided_horizontally>0</divided_horizontally>
                <integrate>1</integrate>
            </columns>
        </megamenu>
    </default>
</config>