<?xml version="1.0"?>
<config>
    <modules>
        <bc_megamenu>
            <version>0.1.0</version>    <!-- Version number of your module -->
        </bc_megamenu>
    </modules>
    <frontend>
        <routers>
            <megamenu>
                <use>standard</use>
                <args>
                    <module>bc_megamenu</module>
                    <frontName>megamenu</frontName>
                </args>
            </megamenu>
        </routers>
        <layout>
            <updates>
                <megamenu>
                    <file>megamenu.xml</file>
                </megamenu>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <megamenu translate="title" module="megamenu">
                                            <title>Mega Menu</title>
                                            <sort_order>2000</sort_order>
                                        </megamenu>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <blocks>
            <catalog>
                <rewrite>
                    <navigation>bc_megamenu_Block_Navigation</navigation>
                </rewrite>
            </catalog>
            <page>
                <rewrite>
                    <html_topmenu>bc_megamenu_Block_Topmenu</html_topmenu>
                </rewrite>
            </page>
            <megamenu>
                <class>bc_megamenu_Block</class>
            </megamenu>
        </blocks>
        <helpers>
            <megamenu>
                <class>bc_megamenu_Helper</class>
            </megamenu>
        </helpers>
    </global>
    <default>
        <megamenu>
            <general>
                <enabled>0</enabled>
                <display_empty_categories>1</display_empty_categories>
                <max_level>4</max_level>
                <show_home_link>1</show_home_link>
                <non_breaking_space>0</non_breaking_space>
            </general>
            <columns>
                <count>3</count>
                <litmit_row>5</litmit_row>
                <divided_horizontally>0</divided_horizontally>
                <integrate>1</integrate>
            </columns>
        </megamenu>
    </default>
</config>